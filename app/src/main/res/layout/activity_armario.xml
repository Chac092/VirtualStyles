<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Armario">

    <Button
        android:id="@+id/botonGorro"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="@drawable/gorra"
        app:layout_constraintBottom_toTopOf="@+id/botonCamisa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"/>

    <Button
        android:id="@+id/botonCamisa"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="@drawable/camisa"
        app:layout_constraintBottom_toTopOf="@+id/botonPantalones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonGorro"
        app:layout_constraintVertical_chainStyle="spread"/>

    <Button
        android:id="@+id/botonPantalones"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="@drawable/pantalon"
        app:layout_constraintBottom_toTopOf="@+id/botonZapatos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonCamisa"
        app:layout_constraintVertical_chainStyle="spread"/>

    <Button
        android:id="@+id/botonZapatos"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="@drawable/zapatos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonPantalones"
        app:layout_constraintVertical_chainStyle="spread"/>

    <Button
        android:id="@+id/BTNSubirFoto"
        android:layout_width="95dp"
        android:layout_height="55dp"
        android:text="@string/BTNAÃ±adirfoto"
        app:layout_constraintBottom_toTopOf="@+id/BTNPendientes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.952"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.713"
        app:layout_constraintVertical_chainStyle="spread" />

    <Button
        android:id="@+id/BTNPendientes"
        android:layout_width="95dp"
        android:layout_height="55dp"
        android:layout_marginBottom="256dp"
        android:text="@string/BTNconsutarconjunto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.949"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BTNSubirFoto"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintVertical_chainStyle="spread" />

</androidx.constraintlayout.widget.ConstraintLayout>