<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Armario">

    <Button
        android:id="@+id/botonGorro"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="@drawable/gorra"
        app:layout_constraintBottom_toTopOf="@+id/botonCamisa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"/>

    <Button
        android:id="@+id/botonCamisa"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="@drawable/camisa"
        app:layout_constraintBottom_toTopOf="@+id/botonPantalones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonGorro"
        app:layout_constraintVertical_chainStyle="spread"/>

    <Button
        android:id="@+id/botonPantalones"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="@drawable/pantalon"
        app:layout_constraintBottom_toTopOf="@+id/botonZapatos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonCamisa"
        app:layout_constraintVertical_chainStyle="spread"/>

    <Button
        android:id="@+id/botonZapatos"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="@drawable/zapatos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonPantalones"
        app:layout_constraintVertical_chainStyle="spread"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/BTNSubirFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:src="@android:drawable/ic_menu_camera"
        app:fabSize="auto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="48dp" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/BTNPendientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/baseline_help_outline_white_18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:maxImageSize="48dp" />

</androidx.constraintlayout.widget.ConstraintLayout>