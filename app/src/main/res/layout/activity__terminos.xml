<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Terminos">

    <ScrollView
        android:layout_width="407dp"
        android:layout_height="734dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/tituloTerminos"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="@string/app_titulo"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textoTerminos"
                android:layout_width="398dp"
                android:layout_height="1982dp"
                android:text="@string/app_texto"
                android:layout_gravity="center_vertical|right"
                />

            <Button
                android:id="@+id/botonRechazarTerminos"
                android:layout_width="401dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:text="@string/cancelo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registroContrasenya" />

            <Button
                android:id="@+id/botonAceptarTerminos"
                android:layout_width="401dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="@string/acepto"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registroContrasenya" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="134dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>