<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColordeFondo"
    tools:context=".Activity_Pagar">

    <EditText
        android:id="@+id/ETnumeroTarjeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="79dp"
        android:layout_marginTop="249dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/NumTarjetaHint"
        android:inputType="number"
        android:maxLength="16"
        android:textColor="#F3F1F1"
        android:textColorHint="#BEFFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="o" />

    <EditText
        android:id="@+id/ETfechaCaducidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="79dp"
        android:layout_marginTop="48dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/FechaCadHint"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#BEFFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ETnumeroTarjeta"
        tools:targetApi="o" />

    <EditText
        android:id="@+id/ETcodigoSeguridad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="79dp"
        android:layout_marginTop="48dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/CodsegHint"
        android:maxLength="3"
        android:numeric="integer"
        android:textColor="#FCFCFC"
        android:textColorHint="#BEFFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ETfechaCaducidad"
        tools:targetApi="o" />

    <Button
        android:id="@+id/botonPagar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="285dp"
        android:layout_marginTop="172dp"
        android:text="@string/BTNPagar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ETcodigoSeguridad" />

    <TextView
        android:id="@+id/TVnumeroTarjeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="82dp"
        android:layout_marginTop="218dp"
        android:text="@string/NumTarjeta"
        android:textColor="#E6E6E6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVfechaCaducidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="79dp"
        android:layout_marginTop="21dp"
        android:text="@string/FechaCredito"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ETnumeroTarjeta" />

    <TextView
        android:id="@+id/TVcodigoSeguridad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="79dp"
        android:layout_marginTop="17dp"
        android:text="@string/CodSeguridadtarjeta"
        android:textColor="#FAFAFA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ETfechaCaducidad" />

</androidx.constraintlayout.widget.ConstraintLayout>