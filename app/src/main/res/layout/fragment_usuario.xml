<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ropaapp.Fragment_Usuario">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/texto_cobro3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="96dp"
            android:text="Contraseña"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/texto_cobro2" />

        <EditText
            android:id="@+id/ETcontraseñaUsuario"
            android:layout_width="207dp"
            android:layout_height="44dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="76dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            app:layout_constraintStart_toEndOf="@+id/texto_cobro3"
            app:layout_constraintTop_toBottomOf="@+id/ETnombreUsuario" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="362dp"
            android:layout_height="63dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:background="@color/Spinner"
            android:popupBackground="@color/Spinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Texto_cobro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="53dp"
            android:text="Cuanto paga el usuario"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner" />

        <TextView
            android:id="@+id/texto_cobro2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="96dp"
            android:text="Nombre del usuario"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Texto_cobro" />

        <EditText
            android:id="@+id/ETnombreUsuario"
            android:layout_width="145dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Name"
            app:layout_constraintStart_toEndOf="@+id/texto_cobro2"
            app:layout_constraintTop_toBottomOf="@+id/ETsalarioUsuario" />

        <EditText
            android:id="@+id/ETsalarioUsuario"
            android:layout_width="70dp"
            android:layout_height="43dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="44dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@+id/Texto_cobro"
            app:layout_constraintTop_toBottomOf="@+id/spinner" />

        <TextView
            android:id="@+id/texto_cobro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="53dp"
            android:text="€"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/ETsalarioUsuario"
            app:layout_constraintTop_toBottomOf="@+id/spinner" />

        <Button
            android:id="@+id/botonGuardarUsuario"
            android:layout_width="92dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="112dp"
            android:text="Guardar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/texto_cobro3" />

        <Button
            android:id="@+id/botonEliminarUsuario"
            android:layout_width="173dp"
            android:layout_height="50dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="102dp"
            android:text="Eliminar usuario"
            app:layout_constraintStart_toEndOf="@+id/botonGuardarUsuario"
            app:layout_constraintTop_toBottomOf="@+id/ETcontraseñaUsuario" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>