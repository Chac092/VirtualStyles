<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ropaapp.Fragment_Usuario">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/ETsalarioUsusario3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="83dp"
            android:text="Contraseña"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ETsalarioUsusario2" />

        <EditText
            android:id="@+id/ETcontraseñaUsuario"
            android:layout_width="207dp"
            android:layout_height="44dp"
            android:layout_marginStart="43dp"
            android:layout_marginTop="65dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            app:layout_constraintStart_toEndOf="@+id/ETsalarioUsusario3"
            app:layout_constraintTop_toBottomOf="@+id/ETnombreUsuario" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="362dp"
            android:layout_height="63dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ETsalarioUsusario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="53dp"
            android:text="Cuanto paga el usuario"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner" />

        <TextView
            android:id="@+id/ETsalarioUsusario2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="144dp"
            android:text="Nombre del usuario"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ETsalarioUsusario" />

        <EditText
            android:id="@+id/ETnombreUsuario"
            android:layout_width="145dp"
            android:layout_height="45dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="129dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            app:layout_constraintStart_toEndOf="@+id/ETsalarioUsusario2"
            app:layout_constraintTop_toBottomOf="@+id/ETsalarioUsusario" />

        <EditText
            android:id="@+id/ETsalarioUsuario"
            android:layout_width="70dp"
            android:layout_height="43dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="44dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@+id/ETsalarioUsusario"
            app:layout_constraintTop_toBottomOf="@+id/spinner" />

        <TextView
            android:id="@+id/TVeuros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="52dp"
            android:text="€"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/ETsalarioUsusario"
            app:layout_constraintTop_toBottomOf="@+id/spinner" />

        <Button
            android:id="@+id/botonGuardarUsuario"
            android:layout_width="92dp"
            android:layout_height="51dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="160dp"
            android:text="Guardar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ETsalarioUsusario3" />

        <Button
            android:id="@+id/botonEliminarUsuario"
            android:layout_width="173dp"
            android:layout_height="50dp"
            android:layout_marginStart="68dp"
            android:layout_marginTop="156dp"
            android:text="Eliminar usuario"
            app:layout_constraintStart_toEndOf="@+id/botonGuardarUsuario"
            app:layout_constraintTop_toBottomOf="@+id/ETcontraseñaUsuario" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>